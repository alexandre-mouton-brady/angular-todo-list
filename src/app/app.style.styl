.app-header
  grid-row 1 / 2
  grid-column 1 / 3
  background-color #7d5fff
  display flex
  justify-content space-between
  color white
  box-shadow 0 2px 5px rgba(0, 0, 0, 0.26)

.app-sidebar
  grid-row 2 / 3
  grid-column 1 / 2
  background-color #17c0eb
  display flex
  flex-flow column nowrap
  align-items center

.app-content
  grid-row 2 / 3
  grid-column 2 / 3
  display flex
  padding 30px

@media (max-width: 520px)
  .app-sidebar
    display none
  
  .app-content
    grid-column 1 / 3